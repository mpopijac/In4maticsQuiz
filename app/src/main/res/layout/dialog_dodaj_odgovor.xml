<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PITANJE"
        android:id="@+id/txtDodajOdgNaPit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="#182675" />

    <EditText
        android:id="@+id/prIme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="Unesi tekst odgovora"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_gravity="center"
        >


        <Button
            android:text="Dodaj točan odgovor"
            android:textSize="15sp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDodTocanOdg"
            >
        </Button>


        <Button android:text="Dodaj netočan odgovor"
            android:textSize="15sp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/btnDodNetocanOdg"
            >
        </Button>

        <Button android:text="Povratak"
            android:textSize="15sp"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:id="@+id/btnPovratak"
            >
        </Button>


    </LinearLayout>

</LinearLayout>