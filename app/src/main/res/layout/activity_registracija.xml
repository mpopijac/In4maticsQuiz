<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="135dp"
            android:layout_height="40dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginBottom="@dimen/abc_action_button_min_width_overflow_material"
            android:text="Registracija"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/naslov_ime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Ime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_ime"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:focusable="true"
            android:hint="Unesite vaše ime"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/naslov_prezime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Prezime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_prezime"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Unesite vaše prezime"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/naslov_korime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Korisničko ime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_korime"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Unesite vaše korisničko ime"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/naslov_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="E-mail"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_email"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Unesite vaš e-mail"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/naslov_lozinka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lozinka"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_lozinke"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Unesite vašu lozinku"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/naslov_lozinka_provjera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Potvrda lozinke"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/unos_lozinke_provjera"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Potvrda lozinke"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/gumb_registracije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Registriraj se" />
    </LinearLayout>
</ScrollView>