<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ODABERI RAZRED"
            android:id="@+id/naslov"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:textColor="#182675" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:paddingTop="50dp"
            android:layout_weight="0.25">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imePrijavljenog"
                android:id="@+id/imePrijavljenog"
                android:layout_gravity="center"
                android:layout_weight="0.07" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_below="@+id/naslov"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="0.1dp">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/peti_razred"
                        android:layout_gravity="left"
                        android:layout_weight="0.12"
                        android:background="#b2bae4"
                        android:layout_margin="10dp"
                        android:layout_column="0"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:id="@+id/sesti_razred"
                        android:layout_gravity="right"
                        android:layout_weight="0.12"
                        android:background="#b2bae4"
                        android:layout_margin="10dp"
                        android:layout_column="10" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.2dp"
                    android:paddingBottom="@dimen/abc_action_bar_stacked_max_height">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:id="@+id/sedmi_razred"
                        android:layout_weight="0.12"
                        android:background="#b2bae4"
                        android:layout_margin="10dp"
                        android:layout_gravity="left"
                        android:layout_column="0"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:id="@+id/osmi_razred"
                        android:layout_gravity="right"
                        android:layout_weight="0.12"
                        android:background="#b2bae4"
                        android:layout_margin="10dp"
                        android:layout_column="10" />
                </TableRow>
            </TableLayout>

        </FrameLayout>
    </LinearLayout>






