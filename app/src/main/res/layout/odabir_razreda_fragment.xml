<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- The main content view where fragments are loaded -->

        <TextView
            android:layout_width="309dp"
            android:layout_height="56dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ODABERI RAZRED"
            android:id="@+id/naslov"
            android:layout_gravity="right"
            android:textAlignment="center"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="366dp"
            android:paddingTop="50dp"
            android:layout_weight="0.25">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/odjava"
                android:id="@+id/odjava"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="0.22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imePrijavljenog"
                android:id="@+id/imePrijavljenog"
                android:layout_gravity="center"
                android:layout_weight="0.07" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_below="@+id/naslov"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="0.1dp">

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/peti_razred"
                        android:textSize="@dimen/abc_action_bar_content_inset_material"
                        android:theme="@style/AppTheme"
                        android:layout_weight="0.13"

                        android:layout_gravity="left"
                        android:layout_column="0" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:id="@+id/sesti_razred"
                        android:layout_gravity="right"
                        android:layout_weight="0.14"
                        android:layout_column="10" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0.2dp"
                    android:paddingBottom="@dimen/abc_action_bar_stacked_max_height">

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:id="@+id/sedmi_razred"
                        android:textSize="@dimen/abc_action_bar_content_inset_material"
                        android:theme="@style/AppTheme"
                        android:layout_weight="0.13"
                        android:layout_gravity="left"
                        android:layout_column="0"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:id="@+id/osmi_razred"
                        android:layout_gravity="right"
                        android:layout_weight="0.14"
                        android:layout_column="10" />
                </TableRow>
            </TableLayout>

        </FrameLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header"/>


</android.support.v4.widget.DrawerLayout>



